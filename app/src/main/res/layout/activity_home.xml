<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEFF1"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

     <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
         android:weightSum="20"
    android:orientation="horizontal">

         <ImageView
             android:layout_width="70dp"
             android:layout_height="60dp"
             android:layout_marginLeft="7dp"
             android:src="@drawable/saftety" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WELCOME"
        android:layout_weight="20"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="35dp"
            android:textSize="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:text="Logout" />
    </LinearLayout>




            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="#6638e2"
                android:textStyle="bold"
                android:layout_height="50dp"

                android:text="Shivam Hospital...." />





        <Button
        android:id="@+id/machine_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add Machine Details"
        android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/staff_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add Staff Details"
            android:layout_marginTop="20dp"/>



        <Button
            android:id="@+id/viewmachine_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="View Machine Details"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/viewstaff"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="View Staff Details"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/deficiency_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Deficiency report"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/edit_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Edit Profile"
            android:layout_marginTop="20dp"/>





    </LinearLayout>

</android.support.constraint.ConstraintLayout>